<?xml version="1.0" encoding="utf-8"?>
<!--Dialog Window Destination-->
<!--TODO Change Destination Option Design (Colors, Picture, Title). Maybe Zoom-In Function-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/destination1"
        android:layout_width="107dp"
        android:layout_height="129dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewDestination1"
            android:layout_width="108dp"
            android:layout_height="95dp"
            app:srcCompat="@drawable/ic_destination" />

        <TextView
            android:id="@+id/textViewDestination1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ziel 1"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination2"
        android:layout_width="115dp"
        android:layout_height="125dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/destination3"
        app:layout_constraintStart_toEndOf="@+id/destination1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewDestination2"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            app:srcCompat="@drawable/ic_destination" />

        <TextView
            android:id="@+id/textViewDestination2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ziel 2"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination3"
        android:layout_width="114dp"
        android:layout_height="128dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="19dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewDestination3"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            app:srcCompat="@drawable/ic_destination" />

        <TextView
            android:id="@+id/textViewDestination3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ziel 3"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>