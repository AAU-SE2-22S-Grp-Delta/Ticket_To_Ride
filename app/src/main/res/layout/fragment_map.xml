<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MapFragment">

    <AbsoluteLayout
        android:id="@+id/map_panel"
        android:layout_width="3840px"
        android:layout_height="2160px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="3840px"
            android:layout_height="2160px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/test_pic" />

        <Button
            android:id="@+id/button_above"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0px"
            android:layout_y="0px"
            android:text="above" />

        <!--        <TextView-->
        <!--            android:id="@+id/message"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="MapFragment" />-->


        <Button
            android:id="@+id/button_downside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="3585px"
            android:layout_y="2034px"
            android:text="Downer" />
    </AbsoluteLayout>


</androidx.constraintlayout.widget.ConstraintLayout>